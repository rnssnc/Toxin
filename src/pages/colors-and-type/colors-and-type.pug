  -
    pageTitle = 'Colors & type'

block main
  +color-palette([{
    caption: 'Dark Shade 100%',
    description: '#1F2041',
    code: '#1F2041'
  },
  {
    caption: 'Dark Shade 75%',
    description: '#1F2041',
    code: 'rgba(31, 32, 65, 0.75)'
  },
  {
    caption: 'Dark Shade 50%',
    description: '#1F2041',
    code: 'rgba(31, 32, 65, 0.5)'
  },
  {
    caption: 'Dark Shade 25%',
    description: '#1F2041',
    code: 'rgba(31, 32, 65, 0.25)'
  },
  {
